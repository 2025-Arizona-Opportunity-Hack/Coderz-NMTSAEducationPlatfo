# NMTSA Learn - Frontend Environment Variables

# ============================================================================
# Backend API Configuration
# ============================================================================

# Backend API Base URL (Django backend with API v1)
# Development: http://localhost:8000/api/v1
# Production: Update to your production API URL
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API Version
VITE_API_VERSION=v1

# ============================================================================
# Authentication Configuration (Auth0 OAuth - REQUIRED)
# ============================================================================

# Auth0 Domain (from your Auth0 Application settings)
# Example: dev-abc123.us.auth0.com
VITE_AUTH0_DOMAIN=your-domain.auth0.com

# Auth0 Client ID (from your Auth0 Application settings)
VITE_AUTH0_CLIENT_ID=your-client-id

# Auth0 Audience (your API identifier from Auth0)
# This should match the identifier of your API in Auth0
VITE_AUTH0_AUDIENCE=https://api.nmtsa.org

# Auth0 Redirect URI (where Auth0 redirects after login)
# Development: http://localhost:5173
# Production: https://your-domain.com
VITE_AUTH0_REDIRECT_URI=http://localhost:5173

# Auth0 Logout Redirect URI
VITE_AUTH0_LOGOUT_REDIRECT_URI=http://localhost:5173

# Auth0 Scopes (permissions requested from Auth0)
VITE_AUTH0_SCOPE=openid profile email

# ============================================================================
# Feature Flags
# ============================================================================

# Enable forum/discussion features
VITE_ENABLE_FORUM=true

# Enable debug mode (shows additional logging)
VITE_DEBUG=false

# ============================================================================
# Application Configuration
# ============================================================================

# Application name (for metadata and branding)
VITE_APP_NAME=NMTSA Learn

# Support email
VITE_SUPPORT_EMAIL=support@nmtsa.org

# Maximum file upload size (in MB)
VITE_MAX_FILE_SIZE=10
