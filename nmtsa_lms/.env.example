# ============================================================================
# NMTSA LMS Backend - Environment Variables
# ============================================================================

# Django Settings
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# Auth0 Configuration (REQUIRED for OAuth)
# ============================================================================

# Auth0 Domain (from your Auth0 Application settings)
# Example: dev-abc123.us.auth0.com
AUTH0_DOMAIN=your-domain.auth0.com

# Auth0 API Audience (your API identifier from Auth0)
# This should match the audience configured in your frontend
# Example: https://api.nmtsa.org
AUTH0_AUDIENCE=https://api.nmtsa.org

# Auth0 Roles Claim (custom namespace for roles in JWT)
# This is set by your Auth0 Action (Post-Login)
# Example: https://nmtsa.org/roles
AUTH0_ROLES_CLAIM=https://nmtsa.org/roles

# Optional: Auth0 Client credentials (not needed for JWT validation)
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret

# ============================================================================
# Database
# ============================================================================

# SQLite (Development - default)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/nmtsa_lms

# ============================================================================
# CORS Settings
# ============================================================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ============================================================================
# Email Settings (Optional)
# ============================================================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# ============================================================================
# Media Files
# ============================================================================

# Maximum upload size in MB
MAX_UPLOAD_SIZE=100
